application States

String company="google";

state start times 3{
	
	const GREETING="Hello";
	say "Thanks for calling to".company.GREETING;
	play "http://myfile.com";
	get 5 digits "question?" => company;
	ask "What the fuck?" =>  hola;
	dialTo "+34656422095";
	call "roberto";  
	String hola=CALLER."";  
	Bool b= DISCONNECTED; 
	Num d=1;
	send {"caller"=>CALLER, "hola"=>hola} to "http://yourhost.com";
	if(IN-PROGRESS)  {
		goTo start when COMPLETED;
		goTo start when ERROR;
		goTo start when HANGUP;
		goTo start when TIMES;
		goTo start when TIMEOUT;
	}else if(FAILED){
		say LASTSTATE;
	}else{
		say GREETING;
	}
	String d  = "hola";
	

	
	 
	hangUp;
	reject;
	
	  
}     

 


    