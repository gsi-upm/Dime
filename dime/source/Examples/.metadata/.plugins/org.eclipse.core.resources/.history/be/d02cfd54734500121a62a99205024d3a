	<block>
		<assign name="LASTSTATE" expr="&quot;start&quot;" />
	</block>
	<!-- If structure declaration -->
	
	<!--  IF cond=(session.callerid==&quot;caller&quot;) -->
	<block cond="(session.callerid==&quot;caller&quot;)">
		<prompt>Hello caller!. We was waiting for you.</prompt>
	</block>
	<block cond="(session.callerid==&quot;caller&quot;)">
		<disconnect/>
	</block>
	
	<!-- ENDIF --><!--ELSE -->
	<block cond="(session.callerid==&quot;caller&quot;)">
		<prompt><value expr="session.callerid"/></prompt>
	</block>
	<block cond="(session.callerid==&quot;caller&quot;)">
		<prompt>sorry, we are busy. Bye</prompt>
	</block>
	<block cond="(session.callerid==&quot;caller&quot;)">
		<disconnect/>
	</block>
	<!-- End of the if declaration -->

