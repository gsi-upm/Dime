<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lan="eu-es">

<!-- Declaration of the global statements -->


<var name="times_start_dime" expr="0"/>
<var name="times_end_dime" expr="0"/>

<var name="DIGITS"/>

<var name="RECORD"/>

<var name="LASTSTATE" expr="&quot;start&quot;"/>

<!-- Declaration of the states -->

<!-- Declaration of the state start -->
<form id="start">
	<block>
		<assign name="LASTSTATE" expr="&quot;start&quot;" />
	</block>
	<if cond="times_start_dime==0">
		<throw event="times_start_event"/> 
	</if>
	<block >
		<prompt>Welcome to the record application.</prompt>
	</block>
	<record  name="RECORD" beep="true" maxtime="5" />
	<block >
		<goto next="#end"/>
	</block>

</form>
	
<!-- End of the state start -->

<!-- Declaration of the state end -->
<form id="end">
	<block>
		<assign name="LASTSTATE" expr="&quot;end&quot;" />
	</block>
	<if cond="times_end_dime==0">
		<throw event="times_end_event"/> 
	</if>
	<block >
		<prompt> 
			<audio expr="RECORD" />
		</prompt>
	</block>
	<block >
		<disconnect/>
	</block>

</form>
	
<!-- End of the state end -->


</vxml>