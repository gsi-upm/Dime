	DialTo "+34656422095";
	Call "roberto";   
	String hola=CALLER+"";  
	Bool b= DISCONNECTED; 
	Num d=1; 
	
	if(IN-PROGRESS)  {
		GoTo start when COMPLETED;
		GoTo start when ERROR; 
		GoTo start when HANGUP;
		GoTo start when TIMES;
		GoTo start when TIMEOUT;
	}else if(FAILED){
		Say LASTSTATE;
	}else{
		Say GREETING;
	}
	String d  = "hola";
	
    Tweet "@reaaliiz es una ladrona"+hola;
    
   Sms "what the fuck" to "+656240934";
	
